<div class="row bg-danger">
  <%= message %>
</div>

<div class="row">
  <divclass="row">
    <div class="col-md-4">&nbsp;</div>
    <div class="col-md-4">
      <h3>注册<h3>
    </div>
    <div class="col-md-4">&nbsp;</div>
  </div>
  <div class="row">
    <div class="col-md-4">&nbsp;</div>
    <div class="col-md-4">
      <form class="form-group" id="register" action="register" method="post">
        <div class="form-group">
          <label for="username">手机号</label>
          <input class="form-control" type="number" value="" name="username" id="username" maxlength="11" />
        </div>
        <div class="form-group">
          <label for="password">密码</label>
          <input class="form-control" type="password" name="password1" id="password1" maxlength="20" />
        </div>
        <div class="form-group">
          <label for="password">确认密码</label>
          <input class="form-control" type="password" name="password2" id="password2" maxlength="20" />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-primary" value="免费注册" />
        </div>
      </form>
    </div>
    <div class="col-md-4">&nbsp;</div>
  </div>
</div>
